<?xml version="1.0" encoding="UTF-8"?>
<Configuration monitorInterval="60">

<Appenders>
    <Console name="Console-Appender" target="SYSTEM_OUT">
        <PatternLayout>
            <pattern>
                %d{ISO8601} %-5p %pid %t (%X) [%c{3~.}:%L]: %m%n
            </pattern>>
        </PatternLayout>
    </Console>
</Appenders>

<Loggers>
        <Root level="debug">
            <AppenderRef ref="Console-Appender"/>
        </Root>
    </Loggers>
</Configuration>